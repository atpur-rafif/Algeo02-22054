{
  "dependencies": {
    "express": "^4.18.2"
  },
  "scripts": {
    "build-app": "make build",
    "build-web": "swc web -d dist -D",
    "watch-server": "nodemon -q --watch dist -e js --ignore/dist/page --exec \"node ./dist/main.js\"",
    "dev-web": "swc web -d dist -D -w",
    "dev-app": "nodemon -q --exec \"make build && echo\" -e c",
    "dev-all": "concurrently \"npm run dev-app\" \"npm run dev-web\" \"npm run watch-server\" -n app,web,server",
    "build": "npm run build-app; npm run build-web",
    "all": "npm run build; node ./dist/main.js"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@types/connect-livereload": "^0.6.2",
    "@types/express": "^4.17.20",
    "@types/livereload": "^0.9.4",
    "concurrently": "^8.2.2",
    "connect-livereload": "^0.6.1",
    "livereload": "^0.9.3"
  }
}
